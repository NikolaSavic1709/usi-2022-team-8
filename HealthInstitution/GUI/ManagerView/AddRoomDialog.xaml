<Window x:Class="HealthInstitution.GUI.ManagerView.AddRoomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthInstitution.GUI.ManagerView"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Create room" Height="350" Width="350" FontSize="16">
    <Grid>
        <Button Content="Create" Click="Create_Click" HorizontalAlignment="Center" Height="29" Margin="0,231,0,0" VerticalAlignment="Top" Width="114"/>
        <Label Content="Room type" HorizontalAlignment="Left" Margin="41,72,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.044,0.712"/>
        <Label Content="Room number" HorizontalAlignment="Left" Margin="41,138,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="typeComboBox" HorizontalAlignment="Left" Margin="175,75,0,0" VerticalAlignment="Top" Width="138" Height="26" Loaded="RoomTypeComboBox_Loaded"/>
        <TextBox x:Name="numberBox" PreviewTextInput="NumberValidationTextBox" HorizontalAlignment="Left" Margin="175,141,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="138" Height="26"/>
    </Grid>
</Window>
