<Window x:Class="HealthInstitution.GUI.SecretaryView.DynamicEquipmentTransferDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthInstitution.GUI.SecretaryView"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Dynamic eqipment transfer" Height="300" Width="300">
    <Grid>
        <Label Content="From room" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="-150,50,0,0"/>
        <Label Content="Quantity" HorizontalAlignment="Center" Margin="-150,100,0,0" VerticalAlignment="Top"/>
        <TextBox Name ="quantityBox" HorizontalAlignment="Center" PreviewTextInput="NumberValidationTextBox" Height="25" Margin="70,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="130" FontSize="16"/>
        <ComboBox Name="roomComboBox" HorizontalAlignment="Center" Height="25" Margin="70,50,0,0" Loaded="RoomComboBox_Loaded"  VerticalAlignment="Top" Width="130"/>

        <Button Content="Transfer" Click="Select_Click" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Top" FontSize="14" Width="60" />

    </Grid>
</Window>
