<Window x:Class="HealthInstitution.GUI.PatientView.Polls.DoctorPollDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthInstitution.GUI.PatientView.Polls" xmlns:local1="clr-namespace:HealthInstitution.ViewModels.GUIViewModels"
        mc:Ignorable="d"
        Title="DoctorPollDialog" Height="600" Width="750">
    <Window.Resources>
        <local1:GradeConverter x:Key="gradeConverterKey" />
    </Window.Resources>

    <Grid>
        <Grid Name="Q1">
            <RadioButton Content="1" HorizontalAlignment="Left" Margin="70,60,0,0" VerticalAlignment="Top" GroupName="Q1" IsChecked="{Binding Q1Answer, Converter={StaticResource ResourceKey=gradeConverterKey}, ConverterParameter=1}" />
            <RadioButton Content="2" HorizontalAlignment="Left" Margin="185,60,0,0" VerticalAlignment="Top" GroupName="Q1" IsChecked="{Binding Q1Answer, Converter={StaticResource ResourceKey=gradeConverterKey}, ConverterParameter=2}" />
            <RadioButton Content="3" HorizontalAlignment="Left" Margin="315,60,0,0" VerticalAlignment="Top" GroupName="Q1" IsChecked="{Binding Q1Answer, Converter={StaticResource ResourceKey=gradeConverterKey}, ConverterParameter=3}" />
            <RadioButton Content="4" HorizontalAlignment="Left" Margin="442,60,0,0" VerticalAlignment="Top" GroupName="Q1" IsChecked="{Binding Q1Answer, Converter={StaticResource ResourceKey=gradeConverterKey}, ConverterParameter=4}" />
            <RadioButton Content="5" HorizontalAlignment="Left" Margin="575,60,0,0" VerticalAlignment="Top" GroupName="Q1"  IsChecked="{Binding Q1Answer, Converter={StaticResource ResourceKey=gradeConverterKey}, ConverterParameter=5}" />
        </Grid>
        <Grid Name="Q2">
            <RadioButton Content="1" HorizontalAlignment="Left" Margin="70,140,0,0" VerticalAlignment="Top" GroupName="Q2" IsChecked="{Binding Q2Answer, Converter={StaticResource ResourceKey=gradeConverterKey}, ConverterParameter=1}" />
            <RadioButton Content="2" HorizontalAlignment="Left" Margin="185,140,0,0" VerticalAlignment="Top" GroupName="Q2" IsChecked="{Binding Q2Answer, Converter={StaticResource ResourceKey=gradeConverterKey}, ConverterParameter=2}" />
            <RadioButton Content="3" HorizontalAlignment="Left" Margin="315,140,0,0" VerticalAlignment="Top" GroupName="Q2"  IsChecked="{Binding Q2Answer, Converter={StaticResource ResourceKey=gradeConverterKey}, ConverterParameter=3}" />
            <RadioButton Content="4" HorizontalAlignment="Left" Margin="442,140,0,0" VerticalAlignment="Top" GroupName="Q2"  IsChecked="{Binding Q2Answer, Converter={StaticResource ResourceKey=gradeConverterKey}, ConverterParameter=4}" />
            <RadioButton Content="5" HorizontalAlignment="Left" Margin="575,140,0,0" VerticalAlignment="Top" GroupName="Q2" IsChecked="{Binding Q2Answer, Converter={StaticResource ResourceKey=gradeConverterKey}, ConverterParameter=5}" />
        </Grid>
        <Grid Name="Q3">
            <RadioButton Content="1" HorizontalAlignment="Left" Margin="70,220,0,0" VerticalAlignment="Top" GroupName="Q3"  IsChecked="{Binding Q3Answer, Converter={StaticResource ResourceKey=gradeConverterKey}, ConverterParameter=1}" />
            <RadioButton Content="2" HorizontalAlignment="Left" Margin="185,220,0,0" VerticalAlignment="Top" GroupName="Q3"  IsChecked="{Binding Q3Answer, Converter={StaticResource ResourceKey=gradeConverterKey}, ConverterParameter=2}" />
            <RadioButton Content="3" HorizontalAlignment="Left" Margin="315,220,0,0" VerticalAlignment="Top" GroupName="Q3" IsChecked="{Binding Q3Answer, Converter={StaticResource ResourceKey=gradeConverterKey}, ConverterParameter=3}" />
            <RadioButton Content="4" HorizontalAlignment="Left" Margin="442,220,0,0" VerticalAlignment="Top" GroupName="Q3" IsChecked="{Binding Q3Answer, Converter={StaticResource ResourceKey=gradeConverterKey}, ConverterParameter=4}" />
            <RadioButton Content="5" HorizontalAlignment="Left" Margin="575,220,0,0" VerticalAlignment="Top" GroupName="Q3" IsChecked="{Binding Q3Answer, Converter={StaticResource ResourceKey=gradeConverterKey}, ConverterParameter=5}" />
        </Grid>
        <Grid Name="Q4">
            <RadioButton Content="1" HorizontalAlignment="Left" Margin="70,300,0,0" VerticalAlignment="Top" GroupName="Q4" IsChecked="{Binding Q4Answer, Converter={StaticResource ResourceKey=gradeConverterKey}, ConverterParameter=1}" />
            <RadioButton Content="2" HorizontalAlignment="Left" Margin="185,300,0,0" VerticalAlignment="Top" GroupName="Q4" IsChecked="{Binding Q4Answer, Converter={StaticResource ResourceKey=gradeConverterKey}, ConverterParameter=2}" />
            <RadioButton Content="3" HorizontalAlignment="Left" Margin="315,300,0,0" VerticalAlignment="Top" GroupName="Q4" IsChecked="{Binding Q4Answer, Converter={StaticResource ResourceKey=gradeConverterKey}, ConverterParameter=3}" />
            <RadioButton Content="4" HorizontalAlignment="Left" Margin="442,300,0,0" VerticalAlignment="Top" GroupName="Q4" IsChecked="{Binding Q4Answer, Converter={StaticResource ResourceKey=gradeConverterKey}, ConverterParameter=4}" />
            <RadioButton Content="5" HorizontalAlignment="Left" Margin="575,300,0,0" VerticalAlignment="Top" GroupName="Q4" IsChecked="{Binding Q4Answer, Converter={StaticResource ResourceKey=gradeConverterKey}, ConverterParameter=5}" />
        </Grid>
        <Grid Name="Q5">
            <RadioButton Content="1" HorizontalAlignment="Left" Margin="70,380,0,0" VerticalAlignment="Top" GroupName="Q5" IsChecked="{Binding Q5Answer, Converter={StaticResource ResourceKey=gradeConverterKey}, ConverterParameter=1}" />
            <RadioButton Content="2" HorizontalAlignment="Left" Margin="185,380,0,0" VerticalAlignment="Top" GroupName="Q5" IsChecked="{Binding Q5Answer, Converter={StaticResource ResourceKey=gradeConverterKey}, ConverterParameter=2}" />
            <RadioButton Content="3" HorizontalAlignment="Left" Margin="315,380,0,0" VerticalAlignment="Top" GroupName="Q5" IsChecked="{Binding Q5Answer, Converter={StaticResource ResourceKey=gradeConverterKey}, ConverterParameter=3}" />
            <RadioButton Content="4" HorizontalAlignment="Left" Margin="442,380,0,0" VerticalAlignment="Top" GroupName="Q5" IsChecked="{Binding Q5Answer, Converter={StaticResource ResourceKey=gradeConverterKey}, ConverterParameter=4}" />
            <RadioButton Content="5" HorizontalAlignment="Left" Margin="575,380,0,0" VerticalAlignment="Top" GroupName="Q5" IsChecked="{Binding Q5Answer, Converter={StaticResource ResourceKey=gradeConverterKey}, ConverterParameter=5}" />
        </Grid>
        <Label Name="LabelQ1" Content="{Binding Q1Text}" HorizontalAlignment="Left" Height="28" Margin="70,20,0,0" VerticalAlignment="Top" Width="595" />
        <Label Name="LabelQ2" Content="{Binding Q2Text}" HorizontalAlignment="Left" Height="28" Margin="70,100,0,0" VerticalAlignment="Top" Width="595" />
        <Label Name="LabelQ3" Content="{Binding Q3Text}" HorizontalAlignment="Left" Height="28" Margin="70,180,0,0" VerticalAlignment="Top" Width="595" />
        <Label Name="LabelQ4" Content="{Binding Q4Text}" HorizontalAlignment="Left" Height="28" Margin="70,260,0,0" VerticalAlignment="Top" Width="595" />
        <Label Name="LabelQ5" Content="{Binding Q5Text}" HorizontalAlignment="Left" Height="28" Margin="70,340,0,0" VerticalAlignment="Top" Width="595" />
        <TextBox x:Name="CommentTextBox" Text="{Binding CommentText}" HorizontalAlignment="Left" Margin="52,513,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Height="35" />
        <Label Content="Komentar" HorizontalAlignment="Left" Height="28" Margin="52,480,0,0" VerticalAlignment="Top" Width="300" />
        <Button Content="Submit" HorizontalAlignment="Left" Margin="544,513,0,0" VerticalAlignment="Top" Height="32" Width="145" Command="{Binding SubmitCommand}" />
    </Grid>
</Window>