<Window x:Class="HealthInstitution.GUI.UserWindow.DoctorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthInstitution.GUI.UserWindow"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="DoctorWindow" Height="350" Width="600">
    <Grid>
        <Menu Margin="0,0,0,280">
            <MenuItem Header="Appointments" FontSize="14" Height="30" Width="111">
                <MenuItem Header="Examinations"/>
                <MenuItem Header="Operations" />
            </MenuItem>
        </Menu>
        <Button Content="Begin examination" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Button Content="Schedule review" HorizontalAlignment="Center" Margin="0,250,0,0" VerticalAlignment="Top" FontSize="18" Width="151"/>
        <Button Content="Log out" Click="LogOut_Click" HorizontalAlignment="Left" Margin="500,280,0,0" VerticalAlignment="Top" FontSize="14" Width="60"/>
        <Image HorizontalAlignment="Center" Height="100" Margin="0,65,0,0" VerticalAlignment="Top" Width="100" Source="/Data/Images/Hospital.png"/>

    </Grid>
</Window>
